# Dockerfile for Kitty ICO TEE Agent (Python)
FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    libc6-dev \
    libffi-dev \
    libssl-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements file
COPY oracle/requirements.txt ./

# Install compatible httpx version first
RUN pip install --no-cache-dir --force-reinstall httpx==0.27.0

# Install Python dependencies with forced reinstall
RUN pip install --no-cache-dir --force-reinstall -r requirements.txt

# Explicitly install OpenAI with correct version
RUN pip install --no-cache-dir --force-reinstall openai==1.55.3

# Create non-root user for security
RUN useradd -m -u 1001 teeuser

# Copy entrypoint script
COPY oracle/entrypoint/docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# Copy source code files only (not directories)
COPY oracle/*.py /app/
COPY oracle/requirements.txt /app/

# Create data directories with correct permissions
RUN mkdir -p /app/keys /app/data /app/logs && \
    chown -R teeuser:teeuser /app && \
    chmod -R 755 /app

USER teeuser

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD python -c "print('TEE Agent is running')" || exit 1

# Default command
CMD ["python", "agent.py"] 